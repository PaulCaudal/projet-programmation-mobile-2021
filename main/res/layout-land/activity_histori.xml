<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layouthisto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoriActivity"
    tools:showIn="@layout/activity_histori">

    <GridLayout
        android:id="@+id/gridLayouthisto"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#FF9800"
        android:columnCount="3"
        android:onClick="myClickHandler2"
        android:rowCount="1"
        tools:context=".HistoriActivity"
        tools:showIn="@layout/activity_histori">

        <TextView
            android:id="@+id/textViewPlayervs"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/historique"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/backButtonhisto"
            android:layout_width="89dp"
            android:layout_height="46dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="24dp"
            android:background="#FF9800"
            android:onClick="myClickHandlerb"
            android:tint="#070707"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_revert"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="7dp"
            tools:visibility="visible" />
    </GridLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linescroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>